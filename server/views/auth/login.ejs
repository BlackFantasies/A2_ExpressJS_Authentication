<!-- Importing Header -->
<%- include ../partials/header.ejs %>

<!-- Importing NavBar -->
<%- include ../partials/main_nav.ejs %>

<!-- MAIN ABOUT SECTION -->
<main class="container">
    <!-- Message Area -->
    <% if (messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages %> 
        </div>
    <% } %>
    
    <div class="row">
        <dive class="offset-md-4 col-md-4">
            <h1 class="pt-5">Please Login</h1>
            <form method="POST" autocomplete="off">
                <fieldset class="form-group">
                    <label for="username">Username: </label>
                    <input type="text" class="form-control" name = "username" placeholder="Enter Username" id="username" required autofocus>
                </fieldset>

                <fieldset class="form-group">
                    <label for="password">Password: </label>
                    <input type="password" class="form-control" name = "password" placeholder="Enter Password" id="password" required>
                    or
                    <a href="/register">Register Here</a>
                </fieldset>
                
                <fieldset class="form-group text-right pt-2">
                    <input type="submit" class="btn btn-success" value="Login">
                    <a href="/">
                        <input type="button" class="btn btn-warning" value="Cancel">
                    </a>
                </fieldset>
            </form>
        </dive>
    </div>

</main>

<!-- Importing Scripts -->
<%- include ../partials/footer.ejs %>