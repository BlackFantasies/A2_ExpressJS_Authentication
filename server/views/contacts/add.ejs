<!-- Importing Header -->
<%- include ../partials/header.ejs %>

<!-- Importing NavBar -->
<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add Page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-10">
            <h1><%= title %></h1>

            <form method="POST" class="form">
                <div class="form-group col-5">
                    <label for="nameTextField">Name:</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Name of the Contact" name="name" required>
                </div>

                <div class="form-group col-5">
                    <label for="phoneNumberTextField">Phone Number:</label>
                    <input type="text" class="form-control" id="phoneNumberTextField" placeholder="Enter the Phone Number of the Contact" name="phoneNumber" required>
                </div>

                <div class="form-group col-5">
                    <label for="emailTextField">eMail:</label>
                    <input type="text" class="form-control" id="emailTextField" placeholder="Enter the eMail of the Contact" name="email" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/contacts-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
        
    </div>
</div>


<!-- Importing Scripts -->
<%- include ../partials/footer.ejs %>